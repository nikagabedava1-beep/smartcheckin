# SmartCheckin.ge Production Environment Variables
# Copy this file to /var/www/smartcheckin/.env and fill in the values

# ===========================================
# DATABASE (Required)
# ===========================================
# Use the password you set during server setup
DATABASE_URL="postgresql://smartcheckin:SmartCheck1n2024!@localhost:5432/smartcheckin"

# ===========================================
# NEXTAUTH (Required)
# ===========================================
NEXTAUTH_URL="https://smartcheckin.ge"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="GENERATE_A_RANDOM_32_CHARACTER_STRING"

# ===========================================
# APP SETTINGS (Required)
# ===========================================
APP_URL="https://smartcheckin.ge"
APP_NAME="SmartCheckin.ge"
NODE_ENV="production"

# ===========================================
# FILE UPLOAD
# ===========================================
UPLOAD_DIR="/var/www/smartcheckin/public/uploads"
MAX_FILE_SIZE="10485760"

# ===========================================
# TTLOCK API (Optional - for smart locks)
# https://open.ttlock.com
# ===========================================
TTLOCK_CLIENT_ID=""
TTLOCK_CLIENT_SECRET=""
TTLOCK_REDIRECT_URI="https://smartcheckin.ge/api/ttlock/callback"

# ===========================================
# BOG iPay - Bank of Georgia (Optional - for payments)
# ===========================================
BOG_MERCHANT_ID=""
BOG_SECRET_KEY=""
BOG_API_URL="https://ipay.ge/opay/api"
BOG_CALLBACK_URL="https://smartcheckin.ge/api/webhooks/bog"

# ===========================================
# WHATSAPP BUSINESS API (Optional - for messaging)
# ===========================================
WHATSAPP_TOKEN=""
WHATSAPP_PHONE_ID=""
WHATSAPP_API_URL="https://graph.facebook.com/v18.0"
